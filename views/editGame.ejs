    <script>
      $(document).ready(function(){
          $('[name="game_imgAddess"]').blur('change', function() {
            var src = jQuery(this).val();
            console.log(src)
            var drawPreview = true;
            if(!src.match("^https?://(?:[a-z\-]+\.)+[a-z]{2,6}(?:/[^/#?]+)+\.(?:jpg|gif|png|jpeg|webp)$") && src == "") {
                $("#warning").text("Must be an image");
                return false;  
              } else {
                $("#warning").html("");
              }
              if(drawPreview) {
                    $('img.preview').prop('src', this.value);
                }
  
             
             
        });
      })
        
      $(window).on("load",function(){
           setTimeout(function(){$(".loader_wrapper").hide();  }, 2000);
           $('body').toggleClass("stop-scrolling");
       })
    </script>
